<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:markdown="clr-namespace:Xam.Forms.Markdown;assembly=Xam.Forms.MarkdownView"
             x:Class="Avalanche.Blocks.MobileContentItem">
    <ContentView.Content>
        <StackLayout Spacing="0">
            <ff:CachedImage x:Name="ffImage" Aspect="AspectFit"/>
            <markdown:MarkdownView x:Name="mdMarkdown" />
        </StackLayout>
    </ContentView.Content>
</ContentView>