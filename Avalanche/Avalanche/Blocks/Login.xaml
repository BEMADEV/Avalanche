<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avalanche.Blocks.Login">
    <ContentView.Content>
        <Grid>
            <ActivityIndicator x:Name="aiActivity"/>
            <StackLayout x:Name="slForm">
                <Label Text="Login" FontSize="40" />
                <Entry x:Name="username" Placeholder="Username" FontSize="20"/>
                <Entry x:Name="password" IsPassword="True" Placeholder="password" />
                <Button x:Name="btnSubmit" Text="Login" Clicked="btnSubmit_Clicked" />
                <Button x:Name="btnForgot" Text="Forgot My Password" Clicked="btnForgot_Clicked"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>